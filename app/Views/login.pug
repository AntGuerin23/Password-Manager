extends parents/header

block body
    .blue-gradient#bs-override
        .align-items-center.d-flex.min-vh-100
            .container
                .row.justify-content-center
                    .col-xl-10.col-lg-12.col-md-9
                        .card.o-hidden.border-0.shadow-lg.my-5
                            .card-body.p-0
                                .row
                                    .col-lg-6.d-none.d-lg-block.login-image
                                    .col-lg-6
                                        .p-5
                                            .text-center
                                                h1.h4.text-gray-900.mb-4 Login
                                            form.user(action='login' method='post')
                                                +input("username", "text", "Enter username")
                                                br
                                                +input("password", "password", "Password")
                                                br
                                                button.btn.btn-primary.btn-user.btn-block(type='submit')
                                                    | Login
                                            hr
                                            .text-center
                                                a.small(href='register') Create an Account
