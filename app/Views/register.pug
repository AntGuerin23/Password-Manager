extends parents/header

block body
    .blue-gradient#bs-override
        .align-items-center.d-flex.min-vh-100
            .container
                .row.justify-content-center
                    .col-xl-10.col-lg-12.col-md-9
                        .card.o-hidden.border-0.shadow-lg.my-5
                            .card-body.p-0
                                .row
                                    .col-lg-6.d-none.d-lg-block.register-image
                                    .col-lg-6
                                        .p-5
                                            .text-center
                                                h1.h4.text-gray-900.mb-4 Create an Account
                                            form.user(action='register' method='post')
                                                +input("email", "email", "Email")
                                                br
                                                +input("username", "text", "Username")
                                                br
                                                .row
                                                    .col-6
                                                        +input("password", "password", "Password")

                                                    .col-6
                                                        +input("password-confirm", "password", "Confirm password")
                                                br
                                                button.btn.btn-primary.btn-user.btn-block(type='submit')
                                                    | Create account
                                            hr
                                            .text-center
                                                a.small(href='login') Already have an account ? Login !