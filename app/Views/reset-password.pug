extends parents/header

block body
    .blue-gradient#bs-override
        .align-items-center.d-flex.min-vh-100
            .container
                +flash
                .row.justify-content-center
                    .col-6
                        .card.o-hidden.border-0.shadow-lg.my-5
                            .card-body.p-0
                                .row
                                    .col
                                        .p-5
                                            .text-center
                                                h1.h4.text-gray-900.mb-4 Reset Your Password
                                            +form("post", "/login/forgot/reset").user
                                                +input("resetCode", "text", "Enter the code you have just received by email")
                                                br
                                                +input("passwordReset", "password", "Enter your new password")
                                                br
                                                +input("passwordResetConfirm", "password", "Confirm your new password")
                                                br
                                                button.btn.btn-primary.btn-user.btn-block(type='submit')
                                                    | Reset password