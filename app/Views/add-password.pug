extends parents/container

block content
    +flash
    +title("Add a New Password")
    br
    .col-4
        +form("post", "password")
            +datalist("appName", "text", "Site domain (ex: google.com)")
            br
            +input("siteUsername", "text", "Username")
            br
            +input("sitePassword", "password", "Password")
            br
            +button("Add password", "fa-solid fa-plus", "btn-success", "submit")

